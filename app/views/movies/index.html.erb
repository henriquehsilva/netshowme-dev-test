<div class="container" style="margin-top: 50px">
  <div class="row">
    <% @movies.each do |movie|%>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
      <%= image_tag 'https://bit.ly/2NIottj', width: "100%", height: "225" %>
        <div class="card-body">
          <p class="card-text"><%= movie.name %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group-sm" role="group">
            <%= link_to "Ver", movie_path(movie.id), class: "btn btn-outline-secondary", type: "button" %>
            <% if user_signed_in? %>
              <%= link_to "Editar", edit_user_movies_path(current_user.id, id: movie.id), class: "btn btn-outline-secondary", type: "button" %>
              <%= link_to "Excluir",
                user_movies_path(current_user.id, id: movie.id),
                data: { confirm: 'Tem certeza que deseja excluir o vídeo?' },
                method: :delete,
                class: "btn btn-outline-secondary",
                type: "button" %>
            <% end %>
            </div>
            <small class="text-muted"><%= movie.views.to_s %> Visualizações</small>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
